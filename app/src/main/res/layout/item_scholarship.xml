<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scholarship Title"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/criteria_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scholarship criteria"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/type_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scholarship type"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Amount_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scholarship Description"
                android:textSize="16sp" />


            <Button
                android:id="@+id/Applynowbtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="#1c1d6d"
                android:gravity="center"
                android:text="Apply Now" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
